# .env.example
# Copy this file to .env and fill in your values
# DO NOT commit .env to git - use .env.example as a template

# Required: Path to Google OAuth client secrets JSON file
# Download from Google Cloud Console > APIs & Services > Credentials > OAuth 2.0 Client IDs
GOOGLE_OAUTH_CLIENT_FILE=/secure/path/to/google_client_secrets.json

# Required: Frontend URL for OAuth redirects
# Must match the redirect URI in Google Cloud Console
FRONTEND_URL=http://localhost:3000

# Optional: Database URL
# Defaults to sqlite:///./emails.db in Backend directory
# DATABASE_URL=sqlite:///./emails.db

# Optional: Enable debug mode
DEBUG=false
